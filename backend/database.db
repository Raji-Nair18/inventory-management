CREATE TABLE users (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    email TEXT,
    password TEXT,
    role TEXT
);

CREATE TABLE products (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    category TEXT,
    stock INTEGER,
    expiry DATE
);

CREATE TABLE sales (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    user_id INTEGER,
    product_id INTEGER,
    date DATE
);
CREATE TABLE weather (
    date TEXT,
    condition TEXT
);

CREATE TABLE product_pairs (
    product_a INTEGER,
    product_b INTEGER,
    confidence REAL
);

